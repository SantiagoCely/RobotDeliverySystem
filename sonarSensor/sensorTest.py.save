import RPi.GPIO as GPIO

import time

try:

GPIO.setmode(GPIO.BOARD)

while(1):

GPIO.setup(0, GPIO.OUT)

GPIO.output(0, False)

time.sleep(0.000002)

GPIO.output(0, True)

time.sleep(0.000005)

GPIO.output(0, False)

GPIO.setup(0, GPIO.IN)



while GPIO.input(0) == 0:

starttime = time.time()



while GPIO.input(0) == 1:

endtime = time.time()



duration = endtime - starttime

distance = duration * 34000 / 2

print distance, "cm"

time.sleep(0.5)



finally:

GPIO.cleanup()


